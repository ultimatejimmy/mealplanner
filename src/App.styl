	height: 100%;
	margin: 0;
	padding: 0;
	font-family: system-ui;
	font-weight: 200
	color #3e5869

#app
	display grid
	height 100%
	grid-template-columns: repeat(6, 1fr);repeat(6, 1fr);
	grid-template-rows: repeat(6, 1fr);
	grid-template-areas: "week t t t s s"\
					 "week m m m list list"\
					 "week m m m list list"\
					 "week m m m list list"\
					 "week m m m list list"\
					 "week m m m list list";
	#weekList
		grid-area week
		background-color grey
	#shoppingList
		grid-area list
		background-color lightgray
